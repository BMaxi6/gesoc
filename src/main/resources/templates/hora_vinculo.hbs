<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

        <!-- Bootstrap CSS -->
        <script src="https://kit.fontawesome.com/3e1d6422ad.js" crossorigin="anonymous"></script>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
        <link rel="stylesheet" href="/css/carga_egreso.css">
        <link rel="stylesheet" href="/css/nuevo_proveedor.css">
        <link rel="stylesheet" href="/css/menu_principal.css">
        <link rel="stylesheet" href="/css/menu_administrador.css">
        <link rel="stylesheet" href="/css/alta_usuario.css">
        <link rel="stylesheet" href="/css/bajaUsuario.css">
        <link rel="stylesheet" href="/css/alta_organizacion.css">
        <link rel="stylesheet" href="/css/hora_vinculo.css">
        <style>
            body{ background-color: white; }
        </style>
        <title>Administración de automatización de vinculo</title>
        <script>
            function mostrarDias(){
                let dias = [];
                for(let i=0; i<7; i++){
                    if(document.getElementById(i).checked){
                        var day = new Object();
                        day.numero = i;
                        dias.push(day);
                    }
                }
                document.getElementById("dias").value = JSON.stringify(dias);
                console.log(JSON.stringify(dias));
            }
        </script>
    </head>

    <header>
        <div id="nav_bar" class="row ">
            <div class="col-1">
            </div>
            <div class="col-1" ALIGN = left>
                <a style="margin-top: 10px; font-size: 40px; color: black" class="fas fa-home" href="/gesoc/administracion"></a>
            </div>    
            <div class="col-6" ALIGN = left>
                <h1>Vínculo de operaciones</h1>
            </div>
            <div class="col-2">
            </div>
            <div class="col-2" ALIGN=left>
                <button id="boton_nav_bar" class="btn"><i class="fas fa-user-alt"></i><a href="/gesoc/home/perfil">Mi Perfil</a></button>
            </div>
        </div>
    </header>

    <body>

        {{#if mostrar_modal}} 
            <div id="modal_resultado_vinculo" class="modal fade" role="dialog" >
            <div class="modal-dialog" >

                <!-- Modal content-->
                <div class="modal-content">
                <div class="modal-header" style="background-color:{{color_modal}};">

                    <h4 class="modal-title">{{modal_titulo}}</h4>
                </div>
                <div class="modal-body">
                    <p>{{aviso_modal}}</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                </div>
                </div>

            </div>
            </div>
        {{/if}}

        <div class="contenedorBusqueda">
            <form action="/gesoc/fecha_vinculo" method="post">
                <div class="centrado">
                    <h3>Seleccione la fecha de inicio:</h3>
                    <input name="fecha" type="date" style="width: inherit"></input>
                </div>
                <hr>
                <div class="centrado">
                    <h3>Seleccione un horario para la fecha de inicion:</h3>
                    <select name="horario">
                        {{#each horarios}}
                            <option value={{@index}}>{{this}}:00</option>
                        {{/each}}
                    </select>
                </div>
                <hr>
                <div class="centrado">
                    <h3>Seleccione cada cuanto volver a realizar el vínculo:</h3>
                    <select name="tipo_plazo">
                        {{#each tipoPlazo}}
                            <option value={{@index}}>{{this}}</option>
                        {{/each}}
                    </select>
                </div>
                <hr>
                <div class="centrado">
                    <h3>Seleccione los días que quiere llevar a cabo el vínculo:</h3>
                    <p style="display: block; font-weight: bold; font-size: 30px;"></p>
                    <br>
                    <input name="dias" id="dias" style="display: none;">
                    <label for="mostrarDias" class="mostrarDias">
                        {{#each dias}}
                            <input type="checkbox" name="{{@index}}" id="{{@index}}" /><p class="cadaDia">{{this}}</p>
                        {{/each}}
                    </label>
                    </ol>
                    </p>
                </div>
                <hr>
                <button style="margin-left: 10%;" onclick="mostrarDias()" class="btn btn-dark" type="submit"> Cambiar Fecha Vinculo</button>
            </form>
        </div>

        <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV" crossorigin="anonymous"></script>
        <script>$("#modal_resultado_vinculo").modal();</script>
    </body>

</html>