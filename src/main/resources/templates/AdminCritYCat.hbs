<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

        <!-- Bootstrap CSS -->
        <script src="https://kit.fontawesome.com/3e1d6422ad.js" crossorigin="anonymous"></script>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
        <link rel="stylesheet" href="/css/carga_egreso.css">
        <link rel="stylesheet" href="/css/nuevo_proveedor.css">
        <link rel="stylesheet" href="/css/bajaUsuario.css">
        <link rel="stylesheet" href="/css/AdminCritYCat.css">
        <style>
            body{ background-color: floralwhite; }
        </style>
        <title>Criterios y Categorías</title>

        <script>
            function ocultar(aOcultar, select){
                if(document.getElementById(select).value == 3){
                    document.getElementById(aOcultar).style.display = 'none';
                } else {
                    document.getElementById(aOcultar).style.display = 'inherit';
                }
            }
        </script>
    </head>

    <header>
        <div id="nav_bar" class="row ">
       
    <div class="col-1"></div>
    
    <div class="col-1" ALIGN = left>
        <a style="margin-top: 10px; font-size: 40px; color: black" class="fas fa-home" href="/gesoc/administracion"></a>
    </div>
    
    <div class="col-6" ALIGN = left>
        <h1>Administración de criterios y categorías</h1>
    </div>
     
    <div class="col-2">
         
      </div>
      
    <div class="col-2" ALIGN=left>
                <button id="boton_nav_bar" class="btn"><i class="fas fa-user-alt"></i><a href="/gesoc/administracion/admin">Mi Perfil</a></button>
      </div>
    </div>
    </header>


    <body>

        {{#if mostrar_modal}} 
            <div id="modal_resultado_cambio" class="modal fade" role="dialog" >
            <div class="modal-dialog" >

                <!-- Modal content-->
                <div class="modal-content">
                <div class="modal-header" style="background-color:{{color_modal}};">

                    <h4 class="modal-title">{{modal_titulo}}</h4>
                </div>
                <div class="modal-body">
                    <p>{{aviso_modal}}</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                </div>
                </div>

            </div>
            </div>
        {{/if}}

        <div id="modificarCriterio" class="modalDialog">
        <div>
		<!-- Boton X -->
        <a href="#close" title="Close" class="close">X</a>
        <!--         -->
        <div>
        <div style="height: inherit; width: inherit">
        <h3 align = "center">Modificar criterios:</h3>
        
        <form action="/gesoc/modificar_criterios" method="post">
            <div class="row">
            <div class="col-5">
                <br><b>Criterio a modificar:</b>
            </div>
            <div class="col-7">
                <select name="critName" class="form-control" id="critName">
                    {{#each criterios}}
                        <option value={{id}}>{{nombre}}</option>
                    {{/each}}
                </select>
            </div>
            </div>

            <div class="row">
            <div class="col-5">
                <br><b>Padre o hijo:</b>
            </div>
            <div class="col-7">
                <select name="critPos" class="form-control" id="critPos" onchange="ocultar('critAux', 'critPos')">
                    <option value="1">Padre</option>
                    <option value="2">Hijo</option>
                    <option value="3">Independiente</option>
                </select>
            </div>
            </div>

            <div class="row" id="critAux">
            <div class="col-5">
                <br><b>Criterio referencia:</b>
            </div>
            <div class="col-7">
                <select name="critSecName" class="form-control" id="critSecName">
                    {{#each criterios}}
                        <option value={{id}}>{{nombre}}</option>
                    {{/each}}
                </select>
            </div>
            </div>

            <div class="row">
            <div class="col-1"></div>
            <div class="col-4">
                <br>
                <button style="width: 100px; height: 60px">
                    <a href="#close" title="Close">Cancelar</a>
                </button>
            </div>
            <div class="col-2"></div>
            <div class="col-4">
                <br>
                <button type="submit" style="width: 100px; height: 60px">Mover criterio</button>
            </div>
            </div>
        </form>
        </div>
        </div>
        </div> 
        </div>

        <div id="modificarCategoria" class="modalDialog">
        <div>
		<!-- Boton X -->
        <a href="#close" title="Close" class="close">X</a>
        <!--         -->
        <div>
        <div style="height: inherit; width: inherit">
        <h3 align = "center">Modificar categorías:</h3>
        
        <form action="/gesoc/modificar_categorias" method="post">
            <div class="row">
            <div class="col-5">
                <br><b>Categoría a modificar:</b>
            </div>
            <div class="col-7">
                <select name="catName" class="form-control" id="catName">
                    {{#each categorias}}
                        <option value={{id}}>{{nombre}}</option>
                    {{/each}}
                </select>
            </div>
            </div>

            <div class="row">
            <div class="col-5">
                <br><b>Criterio padre:</b>
            </div>
            <div class="col-7">
                <select name="name" class="form-control" id="name">
                    {{#each criterios}}
                        <option value={{id}}>{{nombre}}</option>
                    {{/each}}
                </select>
            </div>
            </div>

            <div class="row">
            <div class="col-1"></div>
            <div class="col-4">
                <br>
                <button style="width: 100px; height: 60px">
                    <a href="#close" title="Close">Cancelar</a>
                </button>
            </div>
            <div class="col-2"></div>
            <div class="col-4">
                <br><button type="submit" style="width: 100px; height: 60px">
                    Mover Categoria
                </button>
            </div>
            </div>
        </form>
        </div>
        </div>
        </div> 
        </div>

        <div class="contenedorBusqueda">
            <div class="botones">
                <button id="modificarCriterio" type="button" class="btn btn-dark">
                    <a href="#modificarCriterio">Modificar jerarquía de un criterio</a>
                </button>
                <button id="modificarCategoria" type="button" class="btn btn-dark">
                    <a href="#modificarCategoria">Modificar jerarquía de una categoría</a>
                </button>
            </div>
            <hr>
            {{#each criterios}}
            <div>
                <p class="criterio">Criterio: {{nombre}}</p>
                    {{#each categorias}}
                    <p class="categoria">{{nombre}}</p>
                    {{/each}}
                    {{#each criteriosHijos}}
                    <p class="subcriterio">Subcriterio: {{nombre}}</p>
                        {{#each categorias}}
                        <p class="subcategoria">{{nombre}}</p>
                        {{/each}}
                    {{/each}}
            </div>
            <hr>
            {{/each}}
        </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV" crossorigin="anonymous"></script>
    <script>$("#modal_resultado_cambio").modal();</script>
    </body>
</html>