<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

        <!-- Bootstrap CSS -->
        <script src="https://kit.fontawesome.com/3e1d6422ad.js" crossorigin="anonymous"></script>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
        <link rel="stylesheet" href="/css/carga_egreso.css">
        <link rel="stylesheet" href="/css/nuevo_proveedor.css">
        <link rel="stylesheet" href="/css/menu_principal.css">
        <link rel="stylesheet" href="/css/menu_administrador.css">
        <link rel="stylesheet" href="/css/bajaUsuario.css">
        <script src="/js/baja_usuario.js"></script>
        <style>
            body{ background-color: floralwhite; }
        </style>
        <title>Baja Usuario</title>
    
    </head>


    <header>
        <div id="nav_bar" class="row ">
       
    <div class="col-1"></div>
    
    <div class="col-1" ALIGN = left>
        <a style="margin-top: 10px; font-size: 40px; color: black" class="fas fa-home" href="/gesoc/administracion"></a>
    </div>
    
    <div class="col-6" ALIGN = left>
        <h1>Baja usuario</h1>
    </div>
     
    <div class="col-2">
         
      </div>
      
    <div class="col-2" ALIGN=left>
                <button id="boton_nav_bar" class="btn"><i class="fas fa-user-alt"></i><a href="/gesoc/administracion/admin">Mi Perfil</a></button>
      </div>
</div>
    </header>
    <body>
        <div class="contenedorBusqueda">
            <div class="barraBusqueda">
                <div class="input-group mb-3">
                    <input type="text" id="inputUsuarioBaja" class="form-control" placeholder="Inserte nombre de usuario" aria-label="Inserte nombre de usuario" aria-describedby="basic-addon2">
                    <div class="input-group-append">
                        <button class="btn btn-outline-secondary" type="button">Buscar</button>
                    </div>
                </div>
            </div>
            <div class="usuarios">
                        {{#each usuarios}}
                        Usuario: {{nombre}} <br>
                        Nombre organización: {{organizacion.nombreFicticio}} <br>
                        Razón social organización: {{organizacion.razonSocial}} <br>
                        <form action="/gesoc/eliminar_usuario/{{id}}" method="post">
                        <button  type="submit" class="btn btn-outline-secondary" data-dismiss="alert"  > Eliminar</button>
                        </form>
                        <br>
                        <hr>
                        {{/each}}
            </div>
        </div>
    </body>
</html>