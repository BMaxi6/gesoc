<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

        <!-- Bootstrap CSS -->
        <script src="https://kit.fontawesome.com/3e1d6422ad.js" crossorigin="anonymous"></script>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
        <link rel="stylesheet" href="/css/carga_egreso.css">
        <link rel="stylesheet" href="/css/nuevo_proveedor.css">
        <link rel="stylesheet" href="/css/menu_principal.css">
        <link rel="stylesheet" href="/css/menu_administrador.css">
        <link rel="stylesheet" href="/css/alta_usuario.css">
        <link rel="stylesheet" href="/css/bajaUsuario.css">
        <link rel="stylesheet" href="/css/alta_organizacion.css">
        <style>
            body{ background-color: white; }
        </style>
        <title>Validador de transparencia</title>
        <script>
            function guardarCriterio(){
                document.getElementById("criterioDef").value = document.getElementById("crite").value;
            }
            function guardarCriterioPerm(){
                document.getElementById("criterioPerm").value = document.getElementById("critePerm").value;
            }
        </script>
    </head>


    <header>
        <div id="nav_bar" class="row ">
            <div class="col-1">
            </div>
            <div class="col-1" ALIGN = left>
                <a style="margin-top: 10px; font-size: 40px; color: black" class="fas fa-home" href="/gesoc/administracion"></a>
            </div>    
            <div class="col-6" ALIGN = left>
                <h1>Validador transparencia</h1>
            </div>
            <div class="col-2">
            </div>
            <div class="col-2" ALIGN=left>
                <button id="boton_nav_bar" class="btn"><i class="fas fa-user-alt"></i><a href="/gesoc/administracion">Mi Perfil</a></button>
            </div>
        </div>
    </header>


    <body>
        {{#if mostrar_modal}} 
            <div id="modal_resultado_vinculo" class="modal fade" role="dialog" >
            <div class="modal-dialog" >

                <!-- Modal content-->
                <div class="modal-content">
                <div class="modal-header" style="background-color:{{color_modal}};">

                    <h4 class="modal-title">{{modal_titulo}}</h4>
                </div>
                <div class="modal-body">
                    <p>{{aviso_modal}}</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                </div>
                </div>

            </div>
            </div>
        {{/if}}

        <div id="modal_criterios" class="modalDialog">
            <div>
                <a href="#close" title="Close" class="close">X</a>
                <div class="container-fluid">
                    <select id="crite">
                        {{#each criterios}}
                            <option value={{@key}}>{{@key}}. {{this}}</option>
                        {{/each}}
                    </select>
                </div>
                <a href="#close">
                    <button type="submit" class="btn"  onclick="guardarCriterio()"> Cambiar Criterio </button>
                </a>
            </div>
        </div>

        <div id="modal_criterio_perm" class="modalDialog">
            <div>
                <a href="#close" title="Close" class="close">X</a>
                <div class="container-fluid">
                    <select id="critePerm">
                        {{#each criterios}}
                            <option value={{@key}}>{{@key}}. {{this}}</option>
                        {{/each}}
                    </select>
                </div>
                <a href="#close">
                    <form action="/gesoc/modificar_criterio" method="post">
                    <input name="criterioPerm" id="criterioPerm" value="1" style="display: none;"></input>
                        <button class="btn"  onclick="guardarCriterioPerm()" type="submit"> Cambiar Criterio </button>
                    </form>
                </a>
            </div>
        </div>

        <div class="contenedorBusqueda">
            <div class="card-group">

                <div class="card">
                    <div class="card-body">
                    <form action="/gesoc/ejecutar_validacion_transparencia" method="post">
                        <input name="criterioDef" id="criterioDef" value="1" style="display: none;"></input>
                        <button type="submit" class="btn btn-dark">
                        <h5 class="card-title">
                            Validar transparencia ahora
                        </h5>
                        </button>
                    </form>
                    
                    </div>
                </div>

                <div class="card">
                    <div class="card-body">
                       <form action="">
                            <button type="button" class="btn btn-dark" onclick="window.location.replace('/gesoc/planificacion_validador')">
                            <h5 class="card-title">Modificar automatizaci√≥n del validador</h5>
                            </button>
                        </form>
            
                    </div>
                </div>
            </div>
        </div>

        <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV" crossorigin="anonymous"></script>
        <script>$("#modal_resultado_vinculo").modal();</script>
    </body>
</html>