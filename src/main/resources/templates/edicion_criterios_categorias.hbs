<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <script src="https://kit.fontawesome.com/3e1d6422ad.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/menu_principal.css">
    <link rel="stylesheet" href="/css/carga_egreso.css">
    <link rel="stylesheet" href="/css/nuevo_proveedor.css">
    <script src="/js/edicion_criterios_categorias.js"></script>

    <style>
       body{
            /*background-image: url('assets/fondoMadera.jpg');      */
           background-color:floralwhite;
        }
    </style>
    <title>Edición de criterios y categorías</title>
</head>

<body onload="pedirCriterios()">

<div id="nav_bar" class="row ">
       
    <div class="col-1"></div>
    
    <div class="col-1" ALIGN = left>
        <a style="margin-top: 10px; font-size: 40px; color: black" class="fas fa-home" href="/gesoc/home"></a>
    </div>
    
    <div class="col-6" ALIGN = left>
        <h1>Edición de criterios y categorías</h1>
    </div>

    <div class="col-2">
        <div ALIGN=left>
            <a href="/gesoc/bandeja_de_mensajes"><button id="boton_nav_bar" class="btn"><i class="far fa-envelope"></i> Bandeja de Mensaje </button></a>
        </div>
    </div>
    <div class="col-2">
        <div ALIGN=left>
            <a href="/gesoc/home/perfil"><button id="boton_nav_bar" class="btn"><i class="fas fa-user-alt"></i>Mi Perfil</button></a>
        </div>
    </div>
</div>

<form action="/gesoc/nuevo_criterio" method="post">
<div id="agregarCriterio" class="modalDialog">
    
    <div>
        <a href="#close" title="Close" class="close">X</a>
        <div id="label_caja_presupuesto">
            <div style="height: inherit; width: inherit">
                <h3 align = "center">Nuevo Criterio</h3>
                <div class="row">
                    <div class="col-5">
                        <br><b>Nombre: </b>
                    </div>
                    <div class="col-7">
                        <br><input name="nombre_criterio" type="text" id="nuevoCriterio">
                    </div>
                </div>

                <div class="row">
                    <div class="col-2"></div>
                    <div class="col-4">
                        <br><button class="botonRedondo" style="width: 100px; height: 40px">
                        <a href="#close">Cancelar</a>
                    </button>
                    </div>

                    <div class="col-4">
                        <br><button type="submit" class="botonRedondo" style="width: 100px; height: 40px">
                        Guardar
                    </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
</div>
</form>

<form action="/gesoc/nueva_categoria" method="post">
<div id="agregarCategoria" class="modalDialog">
    <div>
        <a href="#close" title="Close" class="close">X</a>
        <div id="label_caja_presupuesto">
            <div style="height: inherit; width: inherit">
                <h3 align = "center">Nueva Categoría</h3>
                <br>
                <h5 align="left">Seleccionar criterio:</h5>
                <div class="row">
                    <div class="col-12">
                        <div id="eleccionCriterio" class="form-group">
                            <label for="criterio"></label>
                            <select class="form-control" id="criterioSelect2" name="nombre_criterio"></select>
                        </div>
                    </div>
                </div>
                <br>
                <h5 align="left">Nombre de nueva categoría:</h5>
                <div class="row">
                    <div class="col-12">
                        <br><input name="nombre_categoria" class="form-control" type="text" id="nuevaCategoria">
                    </div>
                </div>

                <div class="row">
                    <div class="col-2"></div>
                    <div class="col-4">
                        <br><button class="botonRedondo" style="width: 100px; height: 40px">
                        <a href="#close">Cancelar</a>
                    </button>
                    </div>

                    <div class="col-4">
                        <br><button class="botonRedondo" type="submit" style="width: 100px; height: 40px">
                        Guardar
                    </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</form>

<div class="row" id="label_caja">
    <div class="col-3"></div>
    <div class="col-6" id = "div">
        <input id="input_id_usuario" value="{{usuario.id}}" style="display: none">
        <div class="row">
            <div class="col-8">
                <br><b><p>Criterio:</p></b>
            </div>
            <div class="col-4">
                <br>
                <a href="#agregarCriterio" class="btn btn-outline-white bg-light btn-lg btn-block active" role="button" aria-pressed="true">Nuevo criterio</a>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <div id="eleccionCriterio" class="form-group">
                    <label for="criterio"></label>
                    <select class="form-control" id="criterioSelect" onchange="actualizarCategorias()"></select>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-8">
                <br><b><label>Categorías:</label></b>
            </div>
            <div class="col-4">
                <br>
                <a href="#agregarCategoria" class="btn btn-outline-white bg-light btn-lg btn-block active" role="button" aria-pressed="true">Agregar categoría</a>
                <br>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <select id="select_categoria" class="form-control" style="width: 100%"></select>
                <!--<div class="col-2">
                        <div id="EliminarCriterio">
                            <a href="#eliminarCategoria"><h2 class="text-left"><i class="fas fa-trash-alt"></i></h2></a>
                        </div>
                    </div>-->
            </div>
        </div>
        <br>

    </div>

    <div class="col-3"></div>


</div>

<div id="eliminarCategoria" class="modalDialog">
    <div>
        <div id="label_caja_presupuesto">

            <div style="height: inherit; width: inherit;">

                <div class="row">
                    <div class="col-1"></div>

                    <div class="col-10">
                        <br><label><b>¿Está seguro que desea eliminar la categoría?</b></label>
                    </div>

                    <div class="col-1"></div>
                </div>

                <div class="row">
                    <div class="col-1"></div>

                    <div class="col-4">
                        <br><a href="#close"><button class="botonRedondo" style="width: 100px; height: 40px">
                        Cancelar
                    </button></a>
                    </div>

                    <div class="col-2"></div>

                    <div class="col-4">
                        <br><a href="#close"><button class="botonRedondo" style="width: 100px; height: 40px" type="button" onclick="eliminarCategoria()">Confirmar</button></a>
                    </div>

                    <div class="col-1"></div>

                </div>

            </div>
        </div>
    </div>
</div>

{{#if mostrar_modal}} 

<div id="modal_prueba" class="modal fade" role="dialog" >
  <div class="modal-dialog" >

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header" style="background-color:{{color_modal}};">
        <!--<button type="button" class="close" data-dismiss="modal">&times;</button>-->
        <h4 class="modal-title">{{modal_titulo}}</h4>
      </div>
      <div class="modal-body">
        <p>{{aviso_modal}}</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
      </div>
    </div>

  </div>
</div>
{{/if}}

<!-- Optional JavaScript -->
<!-- jQuery first, then Popper.js, then Bootstrap JS -->
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV" crossorigin="anonymous"></script>
<script>$("#modal_prueba").modal();</script>
</body>
</html>